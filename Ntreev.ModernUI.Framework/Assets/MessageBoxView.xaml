    <ControlTemplate x:Key="MessageBoxView_Template" TargetType="{x:Type views:MessageBoxView}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <DockPanel Margin="10 10 10 0" Grid.Row="0" >
                <Viewbox Width="57" Height="57" x:Name="viewBox">
                    <ContentControl x:Name="Image" />
                </Viewbox>
                <TextBlock Text="{TemplateBinding Message}" Margin="5,14" TextWrapping="Wrap" DockPanel.Dock="Right"
                           VerticalAlignment="Center" HorizontalAlignment="Left" />
            </DockPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                <Button x:Name="PART_OK" Padding="15, 6" IsDefault="True" Content="{x:Static p:Resources.Button_OK}" Margin="8" />
                <Button x:Name="PART_Yes" Padding="15, 6" IsDefault="True" Content="{x:Static p:Resources.Button_Yes}" Margin="8" />
                <Button x:Name="PART_No" Padding="15, 6" Content="{x:Static p:Resources.Button_No}" Margin="8" />
                <Button x:Name="PART_Cancel" Padding="15, 6" Content="{x:Static p:Resources.Button_Cancel}" Margin="8" />
            </StackPanel>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="Button" Value="OK">
                <Setter TargetName="PART_OK" Property="Visibility" Value="Visible" />
                <Setter TargetName="PART_Yes" Property="Visibility" Value="Collapsed" />
                <Setter TargetName="PART_No" Property="Visibility" Value="Collapsed" />
                <Setter TargetName="PART_Cancel" Property="Visibility" Value="Collapsed" />
            </Trigger>
            <Trigger Property="Button" Value="OKCancel">
                <Setter TargetName="PART_OK" Property="Visibility" Value="Visible" />
                <Setter TargetName="PART_Yes" Property="Visibility" Value="Collapsed" />
                <Setter TargetName="PART_No" Property="Visibility" Value="Collapsed" />
                <Setter TargetName="PART_Cancel" Property="Visibility" Value="Visible" />
            </Trigger>
            <Trigger Property="Button" Value="YesNoCancel">
                <Setter TargetName="PART_OK" Property="Visibility" Value="Collapsed" />
                <Setter TargetName="PART_Yes" Property="Visibility" Value="Visible" />
                <Setter TargetName="PART_No" Property="Visibility" Value="Visible" />
                <Setter TargetName="PART_Cancel" Property="Visibility" Value="Visible" />
            </Trigger>
            <Trigger Property="Button" Value="YesNo">
                <Setter TargetName="PART_OK" Property="Visibility" Value="Collapsed" />
                <Setter TargetName="PART_Yes" Property="Visibility" Value="Visible" />
                <Setter TargetName="PART_No" Property="Visibility" Value="Visible" />
                <Setter TargetName="PART_Cancel" Property="Visibility" Value="Collapsed" />
            </Trigger>
            <Trigger Property="Image" Value="None">
                <Setter TargetName="viewBox" Property="Visibility" Value="Collapsed" />
            </Trigger>
            <Trigger Property="Image" Value="Error">
                <Setter TargetName="Image" Property="Content" Value="{StaticResource Error_Image}" />
            </Trigger>
            <Trigger Property="Image" Value="Stop">
                <Setter TargetName="Image" Property="Content" Value="{StaticResource Error_Image}" />
            </Trigger>
            <Trigger Property="Image" Value="Hand">
                <Setter TargetName="Image" Property="Content" Value="{StaticResource Error_Image}" />
            </Trigger>
            <Trigger Property="Image" Value="Question">
                <Setter TargetName="Image" Property="Content" Value="{StaticResource Question_Image}" />
            </Trigger>
            <Trigger Property="Image" Value="Exclamation">
                <Setter TargetName="Image" Property="Content" Value="{StaticResource Warning_Image}" />
            </Trigger>
            <Trigger Property="Image" Value="Warning">
                <Setter TargetName="Image" Property="Content" Value="{StaticResource Warning_Image}" />
            </Trigger>
            <Trigger Property="Image" Value="Information">
                <Setter TargetName="Image" Property="Content" Value="{StaticResource Information_Image}" />
            </Trigger>
            <Trigger Property="Image" Value="Asterisk">
                <Setter TargetName="Image" Property="Content" Value="{StaticResource Information_Image}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style TargetType="{x:Type views:MessageBoxView}">
        <Setter Property="Template" Value="{StaticResource MessageBoxView_Template}" />
        <Setter Property="MinWidth" Value="250" />
        <Setter Property="MaxWidth" Value="375" />
        <Setter Property="Message" Value="{Binding Message}" />
        <Setter Property="Image" Value="{Binding Image}" />
        <Setter Property="Button" Value="{Binding Button}" />
        <Setter Property="Result" Value="{Binding Result, Mode=TwoWay}" />
    </Style>

</ResourceDictionary>